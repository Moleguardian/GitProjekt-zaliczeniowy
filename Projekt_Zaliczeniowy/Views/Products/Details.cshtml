@model Product

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły Produktu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <a>Nazwa Produktu</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <a>Cena</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            <a>Opis</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj Produkt</a> |
    <a asp-action="Index">Wróć na strone sklepu</a>
</div>
